<p id="notice"><%= notice %></p>

<h1>Products

  <a href="http://localhost:3000/products/new" class="btn-floating btn-large waves-effect waves-light orange">
    <i class="material-icons">add</i>
  </a>
</h1>
  <% @products.each do |product| %>
  <div data-link="<%= product_path(product) %>" class="clickable-row" style="float: left; max-height:350px; margin-top:25px;">
    <div class="card <%= product.color.hexidecimal %>" style="background-color: <%= product.color.hexidecimal %>;max-width: 260px; margin-right:20px">
      <%= image_tag('defaultshoe.jpg', :size => "260x200")%>
      <p style="padding-left:10px; padding-top:10px; color:#ffb209"><%= product.product_name %> | </p>
      <p style="padding-left:10px; padding-bottom:10px; color:#ffb209"><%= product.color.colorname %></p>
      <!--<div class="card-action">-->
        <!--<p style="font-size:8px"></p>-->
      <!--</div>-->
    </div>
  </div>
  <% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Product name</th>
      <th>Material</th>
      <th>Heel Size</th>
      <th>Serial Number</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><img src="http://logos-download.com/wp-content/uploads/2016/04/Christian_Louboutin_logo_logotype.png" width="100" height="100"></td>
        <td><%= product.product_name %></td>
        <td><%= product.material.description %></td>
        <td><%= product.heel.height %></td>
        <td><%= product.serialnumber %></td>
        <td><%= product.color.hexidecimal %></td>


        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="panel panel-body" style="padding:0px;padding-left:10px;">
  <%= pie_chart Product.mostpopprod, library: {legend: {position: "right"}},
                colors:["#4d9de0","#e15554","#e1bc29","#3bb273","#7768ae"],
                height:"300px",width:"540px",donut:true,download:true %>
</div>
<%= link_to 'New Product', new_product_path %>
