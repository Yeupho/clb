    </div>
  </div>

  <div class="row">
    <div class="col s6">
      <%= form.label :city %>
      <%= form.text_field :city, id: :customer_City , :required => true%>
    </div>

    <div class="col s6">
      <%= form.label :zipcode %>
      <%= form.text_field :zipcode, id: :customer_Zipcode , :required => true%>
    </div>
  </div>
