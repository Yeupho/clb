<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Customerid</th>
      <th>Reservstatusid</th>
      <th>Productid</th>
      <th>Employeeid</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.customerid %></td>
        <td><%= reservation.reservestatusid %></td>
        <td><%= reservation.productid %></td>
        <td><%= reservation.employeeid %></td>
        <td><%= reservation.sizeid %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= column_chart Employee.group(:EmployeeTypeID).count %>
<%= link_to 'New Reservation', new_reservation_path %>
