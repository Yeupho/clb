<%= form_with(model: @reservation, local: true) do |form| %>

  <h1>Editing Pre-Order</h1>
    <div class="field">
      <%= form.label :"Customer" %>
      <%= form.collection_select(:customerid, Customer.order(:firstname), :id, :full_name2, {prompt: "Customer Name"}, {class: "form-control", required: true}) %>

    </div>
  <div class="field">
    <%= form.label :"Status" %>
    <%= form.collection_select(:reservestatusid, ReservationStatus.all, :id, :statusname, {prompt: "Status"}, {class: "form-control", required: true}) %>

  </div>
  <div class="field">
    <%= form.label "Shoe Size" %>
    <%= form.collection_select(:sizeid, Size.all, :id, :sizename, {prompt: "Shoe size"}, {class: "form-control", required: true}) %>

  </div>
  <div class="field">
    <%= form.label :"Employee" %>
    <%= form.collection_select(:employeeid, Employee.order(:firstname), :id, :full_name2, {prompt: "Employee Name"}, {class: "form-control", required: true}) %>

  </div>
  <div class="field">

  <%= form.label :"Product" %>

  <%= form.collection_select(:productid, Product.order(:product_name), :id, :product_name, {prompt: "Product"}, {class: "form-control", required: true}) %>
  </div>
  <div class="actions">
    <%= form.submit title: 'UPDATE PRE-ORDER', class: 'btn btn-primary'%>
  </div>
<% end %>
