<p id="notice"><%= notice %></p>

<h1>Reservations
  <a href="http://localhost:3000/reservations/new" class=" resvervation-add btn-floating btn-large waves-effect waves-light red" >
    <i class="material-icons">add</i>

  </a>
</h1>
<div class="panel panel-default shadow-pane" style="min-width:100%">
<div class="panel-heading">
</div>
<div class="panel-body" >
<table class="table table-hover text-center striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Customerid</th>
      <th>Reservstatusid</th>
      <th>Productid</th>
      <th>Employeeid</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.date %></td>
        <td><%= reservation.customer.firstname %></td>
        <td><%= reservation.reservation_status.statusname %></td>
        <td><%= reservation.product.product_name %></td>
        <td><%= reservation.employee.firstname %></td>

        <td><%= reservation.sizeid %></td>
      <td><div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown"><span class="caret"></span></button>
        <ul class="dropdown-menu">
        <li><%= link_to 'Show', reservation %></li>
        <li><%= link_to 'Edit', edit_reservation_path(reservation) %></li>
        <li><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div></td>
      <td></td>
      <td></td>
      <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>

<br>
<%= column_chart Employee.group(:employeetypeid).count %>
<%= link_to 'New Reservation', new_reservation_path %>
