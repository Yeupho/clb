<div class="col s12 m7">
  <div class="row">
    <div class="col s6 left-align">
      <h3 class="header"><%= @customer.firstname %> <%= @customer.lastname %></h3>
      <%= form_for @customer, :html => {style: "display: inline-block"} do |f| %>
          <%= f.collection_select(:customerstatusid, CustomerStatus.all, :id, :description, {}, {class: "form-control", onchange: "this.form.submit();"}) %>
      <% end %>
    </div>
    <div class=" col s6 right-align">
      <!--<h3><= @customer.customer_status.description %></h3>-->
      <!--<a class="btn-floating btn-large waves-effect waves-light orange lighten-1"><i class="material-icons">add</i></a>-->
      <!--<a class="btn-floating btn-large waves-effect waves-light brown lighten-4"><i class="material-icons">chevron_left</i></a>-->
      <!--<a class="btn-floating btn-large waves-effect waves-light light-blue lighten-3"><i class="material-icons"></i></a>-->
      <%= link_to 'ADD TO PRE-ORDER', products_path(:customerid => @customer), :class => 'btn btn-primary', :style => 'color:white;' %>
      <%= link_to 'Create Customer', new_customer_path, :class => 'btn btn-primary', :style => 'color:white;'  %>
      <%= link_to 'BACK', customers_path, :class => 'btn btn-primary', :style => 'color:white;' %>

    </div>
  </div>
  <div class="card horizontal">
    <div class="card-image" style="background-color:#EA232D; width:20px; max-height:100%">

    </div>
    <div class="card-stacked">
      <div class="card-content">
        <div class="row">
          <div class="col s6"><strong>Email</strong><br><%= @customer.email %></div>
          <div class="col s6"><strong>Phone</strong><br><%= @customer.phone %></div>
        </div>
        <div class="row">
          <div class="col s6"><strong>Address</strong><br><%= @customer.address %></div>
          <div class="col s6"><strong>Zipcode</strong><br><%= @customer.zipcode %></div>
        </div>
        <div class="row">
          <div class="col s4"><strong>City</strong><br><%= @customer.city %></div>
          <div class="col s4"><strong>Country</strong><br><%= @customer.country.countryname %></div>
          <div class="col s4"><strong>State</strong><br><%= @customer.state.statename %></div>
        </div>
      </div>
      <div class="card-action">
        <%= link_to 'Edit Customer Information', edit_customer_path(@customer) %>
      </div>
    </div>
  </div>
</div>


