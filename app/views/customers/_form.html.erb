      </ul>
    </div>
  <% end %>
    <div class="panel panel-primary">
      <div class="panel-heading">Panel with panel-primary class</div>

      <div class="panel-body">
  <div class="field">
      <div class="row">
        <div class="col s6">
          <%= form.label 'First Name' %>
          <%= form.text_field :firstname, id: :customer_FirstName, :required => true %>
        </div>
        <div class="col s6">
          <%= form.label 'Last Name' %>
          <%= form.text_field :lastname, id: :customer_LastName, :required => true %>
        </div>
      </div>
  </div>

  <div class="field">

  </div>
  <div class="row">
    <div class="col s6">
      <%= form.label :email %>
      <%= form.text_field :email, id: :customer_Email, :required => true %>
    </div>
    <div class="col s6">
      <%= form.label :phone %>
      <%= form.text_field :phone, id: :customer_Phone, :required => true %>
    </div>
  </div>
  <div class="row">
    <div class="col s12">
      <%= form.label :address %>
      <%= form.text_field :address, id: :customer_Address, :required => true %>
    </div>
  </div>
  <div class="row">
    <div class="col s6">
      <%= form.label :country %>
      <%= form.collection_select(:country_id, Country.all, :id, :countryname, {:prompt => 'Select Country'}, {class: "form-control", required: true}) %>

      <!--<= form.collection_select(:country_id, Country.all, :id, :countryname, {prompt: "Country", :selected => @customer.country.to_s}, {class: "form-control", required: true}) %>-->
