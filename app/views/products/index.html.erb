<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Product name</th>
      <th>Material</th>
      <th>Heel Size</th>
      <th>Serial Number</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><img src="http://logos-download.com/wp-content/uploads/2016/04/Christian_Louboutin_logo_logotype.png" width="100" height="100"></td>
        <td><%= product.product_name %></td>
        <td><%= product.material %></td>
        <td><%= product.heel %></td>
        <td><%= product.serialnumber %></td>
        <td><%= product.colorid %></td>


        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

